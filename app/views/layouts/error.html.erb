      .txt {position: absolute; top: 50%; left: 50%; width: 600px; margin-left: -300px; margin-top: -100px;}
      .txt h1 {font-size: 60px; font-style: italic; margin: 10px;}
      .txt h2 { font-size: 35px; font-weight: normal; margin: 0;}
      .txt span { display: inline-block; background-color: #fbfc59;  padding: 5px 10px; }
