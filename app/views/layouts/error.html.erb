      .page-head {width: 100%; height: 76px; position: fixed; top: 0; left: 0; background-color: #000; z-index: 5; text-align: center;}
      .page-head .logo {display: inline-block; margin-top: 11px; margin-right: 35px; width: 107px; height: 52px; }
