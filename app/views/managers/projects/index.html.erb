<div class="page-header">
  <h2>Projects</h2>
</div>

<ul class="nav nav-tabs">
  <li class="active"><a href="#approval" data-toggle="tab">Projects for approval &nbsp; <small class="label label-default"><%= @not_approved_projects.count %></small></a></li>
  <li><a href="#deals" data-toggle="tab">Deals &nbsp; <small class="label label-default"><%= @deals_projects.count %></small></a></li>
  <li><a href="#all" data-toggle="tab">All projects &nbsp; <small class="label label-default"><%= @all_projects.count %></small></a></li>
</ul>

<div class="tab-content">
  <!-- Projects for approval -->
  <div class="tab-pane active" id="approval">
    <% if @not_approved_projects.present? %>
      <table class="table table-hover">
      <thead>
        <tr>
          <th>#ID</th>
          <th>Status</th>
          <th>Posted on</th>
          <th>Style of product</th>
          <th></th>
        </tr>
      </thead>

        <%= render partial: 'project', collection: @not_approved_projects %>
      </table>
    <% else %>
      <br>
      <p class="well text-center">Haven’t posted any projects yet.</p>
    <% end %>
  </div>

  <!-- Deals -->
  <div class="tab-pane" id="deals">
    <% if @deals_projects.present? %>
      <table class="table table-hover">
      <thead>
        <tr>
          <th>#ID</th>
          <th>Status</th>
          <th>Posted on</th>
          <th>Style of product</th>
          <th></th>
        </tr>
      </thead>

        <%= render partial: 'project', collection: @deals_projects %>
      </table>
    <% else %>
      <br>
      <p class="well text-center">Haven’t posted any projects yet.</p>
    <% end %>
  </div>

  <!-- All projects -->
  <div class="tab-pane" id="all">
    <% if @all_projects.present? %>
      <table class="table table-hover">
      <thead>
        <tr>
          <th>#ID</th>
          <th>Status</th>
          <th>Posted on</th>
          <th>Style of product</th>
          <th></th>
        </tr>
      </thead>

        <%= render partial: 'project', collection: @all_projects %>
      </table>
    <% else %>
      <br>
      <p class="well text-center">Haven’t posted any projects yet.</p>
    <% end %>
  </div>
</div>
