<!-- login -->
<div class="popup pass-recover" style="display: none;">
  <div class="pad">
    <div class="cont">
      <h3>To recover your password, please enter an e-mail that You’ve used during registration process</h3>
      <div class="inputs">
        <div class="field">
          <label for="recover_email">E-mail</label>
          <input type="text" id="recover_email" name="recover_email">
          <div class="ierror" id="recover_email-error"></div>
        </div>
        <div class="buts">
          <a href="" class="btn-yellow recover">Recover</a>
          <a href="" class="btn-black cancel">Cancel</a>
        </div>
        <div class="row">
          <a href="" class='to_sign showsign'>Sign in</a>
        </div>
      </div>
    </div>
    <div class="recover-success" style='display: none;'>
      <h3>The message has been sent at e-mail that You’ve provided with further recovery steps</h3>
      <a class="btn-yellow ok">Ok, thanks</a>
    </div>
  </div>
</div>
